rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // --- ðŸ‘‘ BOSS MODE (Global Bypass) ---
    function isBoss() {
      return request.auth != null && (
        request.auth.uid == '2jnMK761RcMvag3Agj5Wx3HjwpJ2' || 
        request.auth.uid == 'VaGwarisa'
      );
    }

    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper: Check for custom claims (faster/cheaper than Firestore lookup)
    function hasClaim(claim) {
      return isAuthenticated() && request.auth.token[claim] == true;
    }

    // Helper: Check if user has any staff role (Writer, Editor, Bureau Chief, Admin)
    function isStaff() {
      return isBoss() || 
             hasClaim('writer') ||
             hasClaim('editor') ||
             hasClaim('bureau_chief') ||
             hasClaim('admin') ||
             hasClaim('super_admin') ||
             // Fallback to Firestore lookup if claims are missing/stale
             (isAuthenticated() && 
              firestore.exists(/databases/(default)/documents/staff/$(request.auth.uid)) &&
              firestore.get(/databases/(default)/documents/staff/$(request.auth.uid)).data.roles.hasAny(['writer', 'editor', 'bureau_chief', 'admin', 'super_admin']));
    }
    
    function isAdmin() {
      return isBoss() || 
             hasClaim('admin') || 
             hasClaim('super_admin') ||
             (isAuthenticated() && 
              firestore.exists(/databases/(default)/documents/staff/$(request.auth.uid)) &&
              firestore.get(/databases/(default)/documents/staff/$(request.auth.uid)).data.roles.hasAny(['admin', 'super_admin']));
    }
    
    // Published images - accessible to ALL STAFF for upload, public for read
    match /published_images/{imageId}/{fileName} {
      // Public can read published images (for website display)
      allow read: if true;
      
      // Staff (Writers, Editors, etc.) can upload/update
      allow create, update: if isStaff() && 
                               request.resource.size < 10 * 1024 * 1024 &&  // 10MB limit
                               request.resource.contentType.matches('image/.*');  // Only images
      
      // Only admins can delete published images
      allow delete: if isAdmin();
    }
    
    // Temporary images for processing (auto-cleanup)
    match /temp_images/{userId}/{fileName} {
      // Users can only access their own temp files
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Guest submission images
    match /guest_submissions/{submissionId}/{fileName} {
      // Public can read guest submission images
      allow read: if true;
      
      // Anyone can upload (for guest submissions)
      allow create: if request.resource.size < 10 * 1024 * 1024 &&  // 10MB limit
                       request.resource.contentType.matches('image/.*');  // Only images
      
      // Staff can update/delete guest submissions
      allow update, delete: if isStaff();
    }
    
    // Ad images
    match /ad_images/{adId}/{fileName} {
      // Public can read ad images
      allow read: if true;
      
      // Staff can upload/update ad images
      allow create, update: if isStaff() && 
                               request.resource.size < 10 * 1024 * 1024 &&  // 10MB limit
                               request.resource.contentType.matches('image/.*');  // Only images
      
      // Only admins can delete ad images
      allow delete: if isAdmin();
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}